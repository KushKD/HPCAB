<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    android:weightSum="3">

    <!-- ImageView -->

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@drawable/solid_line"
        android:gravity="right|center_vertical|center_horizontal"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/image_english"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:src="@drawable/hp_n" />

        </LinearLayout>


    </LinearLayout>


    <!-- Button -->
    <LinearLayout
        android:id="@+id/laydetails"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="2.4"
        android:background="#e6e6e6"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical">
        <!-- Logo -->
        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:gravity="center"
            android:src="@drawable/ic_launcher">

        </ImageView>

        <TextView
            android:id="@+id/splash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="bottom"
            android:text="eCabinet"
            android:textColor="@color/color_dark_rd"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView android:id="@+id/govt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Government of Himachal Pradesh"
            android:textColor="@color/colcr_blue"
            android:textSize="19sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2"
        android:background="@drawable/solid_line"
        android:gravity="right|center_horizontal|center_vertical">

        <TextView
            android:id="@+id/splash_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Department of Information Technology"
            android:textColor="@color/colcr_blue"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
